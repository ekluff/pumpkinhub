<div class="container">
  {{#if addNewPantry}}
      <h1>Add New Pantry Item</h1>
      <div class="container">
        <form>
          <div class="form-group">
            <label for="name">Name</label>
            {{input value=name id="name"}}
          </div>
          <div class="form-group">
            <label for="image">Image URL</label>
            {{input value=image id="image"}}
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            {{input value=description id="description"}}
          </div>
          <button {{action 'savePantry'}}>Save</button>
        </form>
      </div>
  {{else}}
      <button class="btn" {{action 'pantryFormShow'}}>New Pantry Item</button>
  {{/if}}
</div>
