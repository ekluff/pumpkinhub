<div class="container">
  {{#if addNewParty}}
      <h1>Add New Event</h1>
      <div class="container">
        <form>
          <div class="form-group">
            <label for="name">Name</label>
            {{input value=name id="name"}}
          </div>
          <div class="form-group">
            <label for="host">Host</label>
            {{input value=host id="host"}}
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            {{input value=address id="address"}}
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            {{input value=date id="date"}}
          </div>
          <div class="form-group">
            <label for="startTime">Start Time</label>
            {{input value=startTime id="startTime"}}
          </div>
          <div class="form-group">
            <label for="endTime">End Time</label>
            {{input value=endTime id="endTime"}}
          </div>
          <div class="form-group">
            <label for="ageGroup">Age Requirement</label>
            {{input value=ageGroup id="ageGroup"}}
          </div>
          <div class="form-group">
            <label for="details">Details</label>
            {{input value=details id="details"}}
          </div>

          <button {{action 'saveParty'}}>Save</button>
        </form>
      </div>
  {{else}}
      <button class="btn" {{action 'partyFormShow'}}>New Event</button>
  {{/if}}
</div>
