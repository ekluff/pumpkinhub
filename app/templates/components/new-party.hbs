<div class="container">
  {{#if addNewParty}}
      <!-- <h4>Add New Event</h4> -->
      <div class='container'>
        <form>
          <div class="form-group">
            <label for="name">Name</label>
            {{input value=name id="name" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="host">Host</label>
            {{input value=host id="host" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            {{input value=address id="address" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            {{input value=date id="date" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="startTime">Start Time</label>
            {{input value=startTime id="startTime" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="endTime">End Time</label>
            {{input value=endTime id="endTime" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="ageGroup">Age Requirement</label>
            {{input value=ageGroup id="ageGroup" class='form-control'}}
          </div>
          <div class="form-group">
            <label for="details">Details</label>
            {{input value=details id="details" class='form-control'}}
          </div>

          <button class='btn btn-xs' {{action 'saveParty'}}>Save</button>
        </form>
      </div>
  {{else}}
      <button class="party btn btn-warning" {{action 'partyFormShow'}}>New Event</button>
  {{/if}}
</div>
